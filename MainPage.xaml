<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage"
             BackgroundColor="Black">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CalculatorButtonStyle" TargetType="Button">
                <Setter Property="WidthRequest" Value="75" />
                <Setter Property="HeightRequest" Value="75" />
                <Setter Property="BackgroundColor" Value="#333333" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Button.Shadow">
                    <Setter.Value>
                        <Shadow Brush="Gray" Opacity="0.8" Offset="5,5" Radius="5"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Grid HorizontalOptions="Center" VerticalOptions="Center" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- New top row for the display area -->
                <RowDefinition Height="Auto" />
                <!-- Existing rows shifted down by one -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Display Area spanning full button width -->
            <Frame Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                   HasShadow="False" Padding="10" Margin="5" BackgroundColor="#1A1A1A" CornerRadius="8" BorderColor="Gray">
                <VerticalStackLayout Spacing="6" HorizontalOptions="FillAndExpand">
                    <Label x:Name="tempDisplayLabel"
                           FontSize="24"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Text="{Binding TempDisplay}"
                           TextColor="White"
                           Padding="0"/>
                    <!-- thin grey separator -->
                    <BoxView HeightRequest="1" BackgroundColor="Gray" Opacity="0.6" HorizontalOptions="FillAndExpand"/>
                    <HorizontalStackLayout Spacing="1" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label x:Name="displayTextLabel"
                               FontSize="30"
                               HeightRequest="45"
                               HorizontalOptions= "Fill"
                               VerticalOptions="Center"
                               Text="{Binding DisplayText}"
                               TextColor="White"
                               Padding="0"/>
                        <Label x:Name="caretLabel" Text="|" FontSize="30" HorizontalOptions="End" TextColor="White" Opacity="1" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Number Buttons Group -->
            <Frame Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="4"
                   HasShadow="True" Padding="5" Margin="5" BackgroundColor="#1A1A1A" CornerRadius="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Number Buttons -->
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="7" Grid.Column="0" Grid.Row="0" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="8" Grid.Column="1" Grid.Row="0" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="9" Grid.Column="2" Grid.Row="0" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="4" Grid.Column="0" Grid.Row="1" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="5" Grid.Column="1" Grid.Row="1" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="6" Grid.Column="2" Grid.Row="1" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="1" Grid.Column="0" Grid.Row="2" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="2" Grid.Column="1" Grid.Row="2" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="3" Grid.Column="2" Grid.Row="2" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="0" Grid.Column="0" Grid.Row="3" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="." Grid.Column="1" Grid.Row="3" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="=" Grid.Column="2" Grid.Row="3" BackgroundColor="#FF9500" Clicked="Button_Click"/>
                </Grid>
            </Frame>

            <!-- Operation Buttons Group (Column 3) -->
            <Frame Grid.Column="3" Grid.Row="1" Grid.RowSpan="4"
                   HasShadow="True" Padding="5" Margin="5" BackgroundColor="#1A1A1A" CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Operation Buttons -->
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="÷" Grid.Row="0" Grid.Column="0" BackgroundColor="#FF9500" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="×" Grid.Row="1" Grid.Column="0" BackgroundColor="#FF9500" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="−" Grid.Row="2" Grid.Column="0" BackgroundColor="#FF9500" Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="+" Grid.Row="3" Grid.Column="0" BackgroundColor="#FF9500" Clicked="Button_Click"/>
                </Grid>
            </Frame>

            <!-- Other Functions Row 4 -->
            <Frame Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="4"
                   HasShadow="True" Padding="5" Margin="5" BackgroundColor="#1A1A1A" CornerRadius="16">
                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Row 4 Functions -->
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="x²" Grid.Column="0" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="√" Grid.Column="1" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="xʸ" Grid.Column="2" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="ʸ√x" Grid.Column="3" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                </Grid>
            </Frame>

            <!-- Other Functions Row 5 -->
            <Frame Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4"
                   HasShadow="True" Padding="5" Margin="5" BackgroundColor="#1A1A1A" CornerRadius="20">
                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Row 5 Functions -->
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="cos" Grid.Column="0" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="sin" Grid.Column="1" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="tan" Grid.Column="2" Grid.Row="0" BackgroundColor="#FF9500"  Clicked="Button_Click"/>
                    <Button Style="{StaticResource CalculatorButtonStyle}" Text="C" Grid.Column="3" Grid.Row="0" BackgroundColor="Red"  Clicked="Button_Click"/>
                </Grid>
            </Frame>
        </Grid>
    </StackLayout>
</ContentPage>
